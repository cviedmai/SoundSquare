#login
  .toolbar
    =link_to "back", search_fs_path, :class => "back"
    %h1
      Login
  -form_tag login_fs_path, :method => :post, :id => :loginform do
    %ul.rounded
      %li=text_field_tag :username, nil, :placeholder => "Username"
      %li=password_field_tag :password, nil, :placeholder => "Password"
    %a.whiteButton.submit
      Login
    %a.grayButton.goback
      Cancel
  -unless flash.empty?
    .info
      -flash.each do |name, msg|
        =content_tag :div, msg, :id => "flash_#{name}"
